mixin s-contact()
	// start s-contact
	+b.s-contact.section.bg-wrap.block-with-lazy#s-contact&attributes(attributes)
		+pic('cont-bg.jpg','bg')(class='picture-bg')
		.container
			.row
				.col-xl-4
					+e.item-title Задать вопрос
					+e.text Свяжемся с Вами через 30 минут
					+form-wrap
						+input('Введите имя')
						+input('Введите телефон')
						+input('Введите сообщение','textarea')
						+e.btn.btn(type="submit") Задать вопрос
				.col-xl.col-md-6.order-md-last
					+e.map-block
						img.res-i(src='img/@2x/map.jpg' alt='')
				.col-xl-auto.col-md-6
					+e.item
						+e.item-title Позвонить нам
						+e.A.text--link(href='tel:+74951084614') +7 (495) 108-46-14
						+e.text Время работы с 09:00 - 22:00
					+e.item
						+e.item-title Написать нам
						+e.A.text--link(href='mailto:mail@spravka-sport.net') mail@spravka-sport.net
					+e.item
						+e.item-title Наш адрес
						+e.text--link Москва, ул. Волхонка 9, офис 12
	// end s-contact