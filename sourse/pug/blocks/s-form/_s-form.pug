mixin s-form()
	// start s-form
	+b.s-form.section.bg-wrap.block-with-lazy#s-form&attributes(attributes)
		+pic('s-form-bg.jpg','bg')(class='picture-bg')
		.container
			+e.out-wrap
				h3 Оформить заявку
				+form-wrap
					.row
						.col-lg-4.col-md-6
							+input('Фамилия, Имя, Отчество*')
						.col-lg-4.col-md-6
							+input('Дата рождения')
						.col-lg-4.col-md-6
							+input('Вид спорта / соревнований')
						.col-lg-4.col-md-6
							+input('Адрес прописки или регистрации')
						.col-lg-4.col-md-6
							+input('Серия и номер полиса ОМС (при наличии)')
						.col-lg-4.col-md-6
							+input('Введите номер телефона')
						.col-md-8
							+input('Место доставки (станция метро или адрес), желаемое время','textarea')
						.col-md-4
							+e.btn.btn(type='submit') Оформить заявку
				+e.text * - обязательные поля
	// end s-form