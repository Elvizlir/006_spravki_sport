mixin s-form()
	// start s-form
	+b.s-form.section.bg-wrap.block-with-lazy#s-form&attributes(attributes)
		+pic('s-form-bg.jpg','bg')(class='picture-bg')
		.container
			+e.out-wrap
				h3 Оформить заявку
				+form-wrap
					+input('','hidden','','order')(value='форма на синем фоне')
					.row
						.col-lg-4.col-md-6
							+input('Фамилия, Имя, Отчество*','','','name')(required)
						.col-lg-4.col-md-6
							+input('Дата рождения','','','date')
						.col-lg-4.col-md-6
							+input('Вид спорта / соревнований','','','sport')
						.col-lg-4.col-md-6
							+input('Адрес прописки или регистрации','','','adress')
						.col-lg-4.col-md-6
							+input('Серия и номер полиса ОМС (при наличии)','','','polis')
						.col-lg-4.col-md-6
							+input('Введите номер телефона','tel','','tel')(required)
						.col-md-8
							+input('Место доставки (станция метро или адрес), желаемое время','textarea','','place')
						.col-md-4
							+e.btn.btn(type='submit') Оформить заявку
				+e.text * - обязательные поля
	// end s-form